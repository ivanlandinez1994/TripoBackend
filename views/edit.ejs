<%- include('masterPage/_header') -%>

<div class="container">
    <div class="row">
        <div class="col-m5 offset-md-3">
            <div class ="card">
                <div class="card-body"> 
                    <form action="/users/update/<%= user._id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="inserte nombre" class="form-control" value="<%= user.nombre %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="apellido" placeholder="inserte apellido" class="form-control" value="<%= user.apellido %>">
                        </div>
                        <div class="form-group">
                            <input type="text" name="dni" placeholder="inserte dni" class="form-control" value="<%= user.dni %>">
                        </div>
                        <div class="form-group">
                            <input type="date" name="fechaNacimiento" placeholder="inserte fechaNacimiento" class="form-control" value="<%= user.fechaNacimiento %>">
                        </div>
        
                        <button type="submit" class = "btn btn-primary"> 
                            Actualizar
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<%- include('masterPage/_footer') -%>